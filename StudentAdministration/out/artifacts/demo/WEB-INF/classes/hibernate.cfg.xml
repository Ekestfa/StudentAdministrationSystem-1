<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQL5Dialect
        </property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/stusys</property>
        <property name="connection.username">root</property>
        <property name="connection.password">password</property>

        <!--property name="connection.pool_size">1</property-->
        <property name="hibernate.current_session_context_class">
            org.hibernate.context.internal.ThreadLocalSessionContext
        </property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>

        <mapping class="com.studentadministration.model.entity.ClassEntity"/>
        <mapping class="com.studentadministration.model.entity.CourseEntity"/>
        <mapping class="com.studentadministration.model.entity.EnrollEntity"/>
        <mapping class="com.studentadministration.model.entity.EnrollEntityPK"/>
        <mapping class="com.studentadministration.model.entity.InstituteEntity"/>
        <mapping class="com.studentadministration.model.entity.ManagerEntity"/>
        <mapping class="com.studentadministration.model.entity.StudentEntity"/>
        <mapping class="com.studentadministration.model.entity.TeacherEntity"/>
        <mapping class="com.studentadministration.model.entity.ClassEntity"/>
        <mapping class="com.studentadministration.model.entity.CourseClassEntity"/>

    </session-factory>
</hibernate-configuration>